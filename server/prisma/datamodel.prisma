enum AccountType {
  TRIAL
  MONTHLY_PAID
}

type Post {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  published: Boolean! @default(value: "false")
  title: String!
  content: String
  author: User!
}

type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  name: String
  posts: [Post!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  type: AccountType! @default(value: "TRIAL")
  ccLast4: String
  stripeId: String
}
